{

  "manifest_version": 2,
  "name": "Universal debug from log file",
  "version": "1.0",

  "description": "Addon read log file from the website server, parse it and show humanized results",

  "icons": {
    "48": "icons/bug-48.png"
  },

  "browser_action": {
    "default_icon": {
      "16": "icons/bug-off-16.png",
      "32": "icons/bug-off-32.png"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["universal-debug-from-log-file.css"],
      "js": ["jquery-3.1.1.min.js","universal-debug-from-log-file.js"]
    }
  ],

  "permissions": ["storage"]

}